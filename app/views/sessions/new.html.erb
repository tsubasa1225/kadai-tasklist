<h1>Log in</h1>

<div>
  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    <div>
      <%= f.label :email, "email" %>
      <%= f.email_field :email %>
    </div>
    <div>
      <%= f.label :password, "password" %>
      <%= f.password_field :password %>
    </div>
    
    <%= f.submit "ログイン" %>
  <% end %>
</div>

<p>New User? <%= link_to "Sign up now", signup_path %></p>